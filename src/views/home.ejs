<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Valorant API</title>
  <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Valorant API - Selecione uma Categoria</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% categories.forEach(category => { %>
        <a href="<%= category.url %>" class="block bg-white shadow-md rounded-lg p-6 text-center hover:bg-blue-500 hover:text-white transition-colors duration-300">
          <h2 class="text-xl font-semibold"><%= category.name %></h2>
        </a>
      <% }) %>
    </div>
  </div>
</body>
</html>
